# =============================================================================
# LOCAL DOCKER DEPLOYMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and adjust values as needed.
# For Docker: Use service names (db, mailhog) instead of localhost.
# For local dev without Docker: Use localhost.

# =============================================================================
# DATABASE
# =============================================================================
# Docker:    postgresql://postgres:postgres@db:5432/saas_db
# Local:     postgresql://postgres:postgres@localhost:5432/saas_db
DATABASE_URL=postgresql://postgres:postgres@db:5432/saas_db

# =============================================================================
# APPLICATION
# =============================================================================
APP_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# SESSION & SECURITY
# =============================================================================
# IMPORTANT: Change this to a random 32+ character string in production!
# Generate one with: openssl rand -base64 32
SESSION_SECRET=local-dev-secret-change-me-in-production-abc123

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
# Docker:    mailhog (Docker service name)
# Local:     localhost (if running MailHog outside Docker)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@localhost

# =============================================================================
# SUPERADMIN ACCOUNT (Seeded on first run)
# =============================================================================
SUPERADMIN_EMAIL=admin@localhost
SUPERADMIN_PASSWORD=SuperSecurePassword123!
SUPERADMIN_NAME=Super Admin

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15
RATE_LIMIT_SIGNUP_MAX=3
RATE_LIMIT_SIGNUP_WINDOW_MINUTES=60
RATE_LIMIT_PASSWORD_RESET_MAX=3
RATE_LIMIT_PASSWORD_RESET_WINDOW_MINUTES=60

# =============================================================================
# TOKEN EXPIRY (in hours)
# =============================================================================
EMAIL_VERIFICATION_TOKEN_EXPIRY_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=1
SESSION_EXPIRY_HOURS=24

# =============================================================================
# TRIAL CONFIGURATION
# =============================================================================
TRIAL_DURATION_DAYS=14

# =============================================================================
# CRON JOBS
# =============================================================================
# Used to authenticate cron job endpoints
CRON_SECRET=local-cron-secret-change-me-in-production

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# Set to true to seed demo users on startup
SEED_DEMO_USERS=true
