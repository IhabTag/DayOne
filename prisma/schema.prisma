// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum Role {
  USER
  SUPERADMIN
}

enum UserStatus {
  ACTIVE
  DEACTIVATED
}

enum Plan {
  BASIC
  PRO
}

enum RegistrationSource {
  NORMAL
  REFERRAL
}

enum AuthProvider {
  PASSWORD
  GOOGLE
}

// =============================================================================
// MODELS
// =============================================================================

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?  // Optional for OAuth-only users
  name         String?
  avatar       String?
  timezone     String   @default("UTC")

  // Auth status
  emailVerified DateTime?
  role          Role       @default(USER)
  status        UserStatus @default(ACTIVE)

  // Onboarding info
  referralSource      String?  // Where user heard about us
  referralSourceOther String?  // If referralSource is "other"
  jobFunction         String?  // User's job function
  jobFunctionOther    String?  // If jobFunction is "other"

  // Plan & Trial
  plan          Plan      @default(PRO)
  trialStartDate DateTime @default(now())
  trialEndDate   DateTime
  planOverride   Boolean   @default(false) // If true, plan won't auto-downgrade
  planChangedAt  DateTime?

  // Referral tracking
  referrerId         String?
  referrer           ReferralLink?       @relation("ReferredBy", fields: [referrerId], references: [id], onDelete: SetNull)
  registrationSource RegistrationSource  @default(NORMAL)
  trialDaysGranted   Int?                // Snapshot of trial days at signup

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessions            Session[]
  verificationTokens  VerificationToken[]
  passwordResetTokens PasswordResetToken[]
  emailChangeTokens   EmailChangeToken[]
  auditLogs           AuditLog[]
  createdReferralLinks ReferralLink[]     @relation("ReferralLinksCreated")
  authProviders        UserAuthProvider[]

  @@index([email])
  @@index([role])
  @@index([status])
  @@index([plan])
  @@index([referrerId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  userAgent String?
  ipAddress String?
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

model VerificationToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model EmailChangeToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  newEmail  String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  actorId    String?  // The user who performed the action (may differ from userId)
  action     String   // e.g., "user.signup", "user.login.success", "user.plan.changed"
  entityType String?  // e.g., "user", "session"
  entityId   String?  // ID of the affected entity
  metadata   Json?    // Additional context (avoid PII)
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([actorId])
  @@index([action])
  @@index([entityType])
  @@index([createdAt])
}

model RateLimitEntry {
  id         String   @id @default(cuid())
  identifier String   // IP address or email
  action     String   // e.g., "login", "signup", "password_reset"
  count      Int      @default(1)
  windowStart DateTime @default(now())
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, action])
  @@index([expiresAt])
}

model ReferralLink {
  id              String   @id @default(cuid())
  slug            String   @unique
  displayName     String?
  trialDays       Int
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdByUserId String?
  createdByUser   User?    @relation("ReferralLinksCreated", fields: [createdByUserId], references: [id], onDelete: SetNull)

  // Users who registered via this link
  referredUsers   User[]   @relation("ReferredBy")

  @@index([slug])
  @@index([isActive])
}

model UserAuthProvider {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider       AuthProvider
  providerUserId String       // e.g., Google 'sub' claim
  createdAt      DateTime     @default(now())

  // Each provider can only be linked once globally
  @@unique([provider, providerUserId])
  // Each user can only have one link per provider
  @@unique([userId, provider])
  @@index([userId])
}
